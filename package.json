{
  "name": "vite-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "contract:build": "cd contracts/todo && sui move build",
    "contract:test": "node scripts/test-contract.js",
    "contract:fmt": "cd contracts/todo && sui move fmt",
    "contract:clean": "rm -rf contracts/todo/build",
    "deploy": "node scripts/deploy.js",
    "deploy:local": "node scripts/deploy.js local",
    "deploy:testnet": "node scripts/deploy.js testnet",
    "deploy:mainnet": "node scripts/deploy.js mainnet",
    "deploy:devnet": "node scripts/deploy.js devnet",
    "setup": "npm install && cp .env.example .env.local",
    "clean": "rm -rf dist node_modules/.vite contracts/*/build",
    "test": "npm run contract:test && npm run typecheck && npm run lint",
    "ci": "npm run test && npm run build",
    "start": "npm run deploy:testnet && npm run dev",
    "start:local": "npm run deploy:local && npm run dev",
    "local:start": "node scripts/start-local-network.js",
    "local:stop": "pkill -f 'sui start'"
  },
  "dependencies": {
    "@mysten/dapp-kit": "^0.17.2",
    "@mysten/sui": "^1.37.1",
    "@mysten/sui.js": "^0.54.1",
    "@tanstack/react-query": "^5.84.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
